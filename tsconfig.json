{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",                    // ✅ Valid module setting
    "moduleResolution": "bundler",        // ✅ Required for customConditions
    "customConditions": ["react-native"], // ✅ Works with bundler
    "jsx": "react-native",                
    "target": "esnext", 
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": { 
      "@/*": ["./*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
